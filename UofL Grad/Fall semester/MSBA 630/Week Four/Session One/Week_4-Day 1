CREATE TABLE Owner (
OWNER_NUM INT NOT NULL,
LAST_NAME VARCHAR (25),
FIRST_NAME VARCHAR (25),
ADDRESS VARCHAR (40),
CITY VARCHAR (30),
STATE VARCHAR (30),
ZIP_CODE INT
);

ALTER TABLE Owner 
ADD CONSTRAINT PK_Owner PRIMARY KEY (OWNER_NUM)

CREATE TABLE OFFICE (
OFFICE_NUM INT NOT NULL,
OFFICE_NAME VARCHAR (25),
OFFICE_AREA VARCHAR (25),
CITY VARCHAR (30),
STATE VARCHAR (30),
ZIP_CODE INT
);

ALTER TABLE OFFICE 
ADD CONSTRAINT PK_OFFICE PRIMARY KEY (OFFICE_NUM)

CREATE TABLE PROPERTY (
PROPERTY_ID INT NOT NULL,
OFFICE_NUM INT,
ADDRESS VARCHAR (30),
SQR_FT FLOAT (10),
BDRMS INT,
FLOORS INT,
MONTHLY_RENT VARCHAR (30),
OWNER_NUM INT
);

ALTER TABLE PROPERTY 
ADD CONSTRAINT PK_PROPERTY PRIMARY KEY (PROPERTY_ID),
	CONSTRAINT FK_PROPERTY_OFFICE FOREIGN KEY (OFFICE_NUM) REFERENCES OFFICE,
	CONSTRAINT FK_PROPERTY_Owner FOREIGN KEY (OWNER_NUM) REFERENCES Owner

CREATE TABLE RESIDENTS (
RESIDENT_ID INT NOT NULL,
LAST_NAME VARCHAR (30),
FIRST_NAME VARCHAR (30),
PROPERTY_ID INT
);

ALTER TABLE RESIDENTS 
ADD CONSTRAINT PK_RESIDENT PRIMARY KEY (RESIDENT_ID),
	CONSTRAINT FK_RESIDENT_PROPERTY FOREIGN KEY (PROPERTY_ID) REFERENCES PROPERTY

CREATE TABLE SERVICE_CATEGORY (
CATEGORY_NUM INT NOT NULL,
CATEGORY_DESCRIPTION VARCHAR (100),
);

ALTER TABLE SERVICE_CATEGORY 
ADD CONSTRAINT PK_SERVICE_CATEGORY PRIMARY KEY (CATEGORY_NUM)

CREATE TABLE SERVICE_REQUEST (
SERVICE_ID INT NOT NULL,
PROPERTY_ID INT,
CATEGORY_NUM INT,
OFFICE_NUM INT,
DESCRIPTION VARCHAR (30),
STATUS VARCHAR (30),
EST_HOURS FLOAT (24),
SPENT_HOURS FLOAT (24),
NEXT_SERVICE_DATE VARCHAR (30)
);

ALTER TABLE SERVICE_REQUEST 
ADD CONSTRAINT PK_SERVICE_REQUEST PRIMARY KEY (SERVICE_ID),
	CONSTRAINT FK_SERVICE_REQUEST_PROPERTY FOREIGN KEY (PROPERTY_ID) REFERENCES PROPERTY,
	CONSTRAINT FK_SERVICE_REQUEST_SERVICECAT FOREIGN KEY (CATEGORY_NUM) REFERENCES SERVICE_CATEGORY,
	CONSTRAINT FK_SERVICE_REQUEST_OFFICENUM FOREIGN KEY (OFFICE_NUM) REFERENCES OFFICE


DROP TABLE Owner1

SELECT * FROM OFFICE